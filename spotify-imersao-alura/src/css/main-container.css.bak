main{
    margin-left: 320px;
}

.main-container{
    width: 65vw;
    height: 100vh;
}

.main-container > .navebar-header{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: #121212;
    margin: 10px 0 10px 5px;
    width: 100%;
    height: 60px;
    padding: 10px 20px 10px 20px;
    border-radius: 8px;
}

.navebar-header__search{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap:15px;
}

.header__navigation{
    display: flex;
    flex-direction: row;
    align-items: center;
    gap:15px;
}

.header__navigation > .arrow-left ,
.header__navigation > .arrow-right {
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 50%;
    padding: 5px;
    border: none;
    cursor: pointer;
    
}

/*BUSCADOR*/

.header__search{
    display: flex;
    flex-direction: row;
    align-items: center;
    gap:15px;
    padding: 13px 10px;
    background-color: #242424;
    border-radius: 500px;
    border: 1px solid transparent;
}

.header__search > img{
    width: 18px;
}
.header__search > input{
   min-width: 300px;
   background-color: transparent;
   border: none;
   outline: 0;
   color:aliceblue;
   text-overflow: ellipsis;
   overflow: hidden;
   white-space: nowrap;
}

.header__search:hover{
    border: solid 2px white;
}

/*BOTOES LOGIN*/
.header__login{
    display: flex;
    flex-direction: row;
    align-items: center;
    gap:15px;
}

.header__login > .subscribe{
    color: white;
    font-size: 16px;
    font-weight: 700;
    background-color: transparent;
    margin-right: 32px;

}

.header__login > .subscribe:hover,
.header__login > .login:hover
{
    transform: scale(1.09); /* Equal to scaleX(0.7) scaleY(0.7) */
    opacity: 0.9;
}

.header__login > .login{
    width: 100px;
    height: 48px;
    color: black;
    font-size: 16px;
    font-weight: 700;
    border-radius: 40px;
}

